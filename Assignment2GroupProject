import pygame
import random

#Game options
WIDTH = 360
HEIGHT = 480
FPS = 60
TITLE = "Group Project"
BLACK = (0, 0, 0)

#Initialises and runs the game
class Game:
    #Initialises
    def __init__(self):
        pygame.init()
        pygame.mixer.init()
        self.screen = pygame.display.set_mode((WIDTH, HEIGHT))
        pygame.display.set_caption(TITLE)
        self.clock = pygame.time.Clock()
        self.running = True

    #Starts a new game
    def new_game(self):
        self.all_sprites = pygame.sprite.Group()
        self.player = Player()
        self.all_sprites.add(self.player)
        self.run()

    #Game loop for running the game
    def run(self):
        self.playing = True
        while self.playing:
            self.clock.tick(FPS)
            self.events()
            self.update()
            self.draw()

    #Updates for the game loop
    def update(self):
        self.all_sprites.update()

    #In game events handled here
    def events(self):
        for event in pygame.event.get():
            if event.type == pygame.QUIT:
                if self.playing:
                    self.playing = False
                self.running = False


    def draw(self):
        self.screen.fill(BLACK)
        self.all_sprites.draw(self.screen)
        pygame.display.flip()

    def start_screen(self):
        pass

    def game_over_screen(self):
        pass

Game.start_screen()
while Game.running:
    Game.new()
    Game.game_over_screen()

pygame.quit()
